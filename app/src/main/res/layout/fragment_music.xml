<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@+id/music_listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <android.support.v4.widget.ContentLoadingProgressBar
        android:id="@+id/music_progressBar"
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/music_button_up"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@color/music_button"
            android:gravity="center"
            android:text="上一曲"
            android:textColor="#fff"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/music_button_play"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@color/music_button"
            android:gravity="center"
            android:text="播放"
            android:textColor="#fff"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/music_button_stop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@color/music_button"
            android:gravity="center"
            android:text="停止"
            android:textColor="#fff"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/music_button_next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@color/music_button"
            android:gravity="center"
            android:text="下一曲"
            android:textColor="#fff"
            android:textSize="17sp" />

    </LinearLayout>

</LinearLayout>